<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thanksmatrix.tmcontact">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:theme="@style/AppTheme"
        android:supportsRtl = "true">
    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="ocr" />

    <activity
        android:name="thanksmatrix.tmcontact.Login">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name="thanksmatrix.tmcontact.Dashboard">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="thanksmatrix.tmcontact.Dashboard" />
    </activity>
        <activity android:name="thanksmatrix.tmcontact.Add"></activity>
        <activity android:name="thanksmatrix.tmcontact.Search"></activity>
        <activity android:name="thanksmatrix.tmcontact.OcrCaptureActivity"></activity>
    </application>

</manifest>